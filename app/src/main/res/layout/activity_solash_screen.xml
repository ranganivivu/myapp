<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".SolashScreen">
<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/t2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UBER"
        android:fontFamily="cursive"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="50dp"
        android:textColor="#fff"
        android:layout_marginTop="90dp"
        android:textSize="45dp"></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/uber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/palce1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/vie1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_place_black_24dp"></ImageView>

     <ImageView
        android:id="@+id/car"
        app:layout_constraintBottom_toTopOf="@+id/vie1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:src="@drawable/ic_local_shipping_black_24dp">
     </ImageView>
    <ImageView
        android:id="@+id/palce2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/vie1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pin_drop_black_24dp"></ImageView>



    <View
        android:id="@+id/vie1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="2dp"
        ></View>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>